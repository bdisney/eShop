<p>
  <strong>Name:</strong>
  <%= @order.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Pay type:</strong>
  <%= @order.pay_type %>
</p>

<p>
  <strong>Order created date:</strong>
  <%= @order.created_at.strftime("%d %B %Y, %H:%M")  %>
</p>

<p>
  <strong>Order details:</strong><br />
</p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Product id</th>
      <th>Product title</th>
      <th>Quantity</th>
      <th>Price per one</th>
      <th>Price</th>
    </tr>
  </thead>
    <% @order.line_items.each do |details| %>
  <tbody>
    <tr>
      <td><%= details.product_id %></td>
      <td><%= details.product.title %></td>
      <td><%= details.quantity %></td>
      <td><%= number_to_currency(details.price) %></td>
      <td><%= number_to_currency(details.price * details.quantity) %></td>
    </tr> 
    <% end %>
    <tr>
      <td></td><td></td><td></td>
        <td><strong>Total price:</strong></td>
        <td><strong><%= number_to_currency(@order.total_price) %></strong></td>
    </tr>  
  </tbody>
  </table>
 
  
</p>
<p><%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %></p>






