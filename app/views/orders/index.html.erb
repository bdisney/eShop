<h1>Listing Orders</h1>

<table table class="table table-striped">
  <thead>
    <tr>
      <th>Created at</th>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime("%F (%H:%M)") %></td>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td>
          <p>
            <%= link_to 'Show', order, class: "btn btn-info btn-xs" %>
            <%= link_to 'Destroy', order, method: :delete, 
                                          class: "btn btn-danger btn-xs",
                                          data: { confirm: 'Are you sure?' } %>
          </p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to store catalog', store_path, class: "btn btn-primary btn-xs active" %>
