
<div class="container">
  <div class="divider-new">
    <h2 class="h2-responsive"><%=@product.title %></h2>
  </div>
    <div class="row">
      <!--Sidebar-->
        <div class="col-lg-4">
          <div class="widget-wrapper">
            <h4>Categories:</h4>
              <br>
                <div class="list-group">
                  <span><% Category.all.find_each do |category| %>
                    <%= link_to category.name, products_path(category: category.id), class: "list-group-item" %></span>
                  <% end %>
                </div>
          </div>
          <br />
          <div class="widget-wrapper">
            <h4>Subscription form:</h4>
            <br>
            <div class="card">
              <div class="card-block">
                <div id="cart">
                  <%= render @cart %>
                </div>
              </div>
            </div>
          </div>

        </div>
