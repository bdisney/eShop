                      </div>
                        <div class="col-lg-6 text-right">  <%= button_to 'ADD TO CART', line_items_path(product_id: @product), class: "btn btn-outline-info waves-effect btn-sm ",  remote: true, role: "button", onclick: "toastr.success('Successfully added to cart!');" %>
                        </div>
                    </div>  
                      <h2 class="h2-responsive">Description</h2>
                      <hr>
                      <p><%= @product.description %></p> 

