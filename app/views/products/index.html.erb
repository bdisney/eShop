<h2>Listing products</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Product image</th>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th class="text-right">Actions</th>
    </tr>
  </thead>
  <% @products.each do |product| %>
  <tbody>
      <tr class="<%= cycle('success', 'info', 'active') %>">
          <td>
              <%= image_tag(product.image_url, class: 'list_image') %>
          </td>
          <td><%= product.id %></td>
          <td><strong><%= product.title %></strong></td>
          <td><%= truncate(strip_tags(product.description), length: 40) %></td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= product.created_at.strftime("%F %H:%M") %></td>
          <td><%= product.updated_at.strftime("%F %H:%M") %></td>

          <td class="list_actions">
              <%= link_to 'Show', product, class: "btn btn-info btn-xs active", style: "width: 60px" %><br/>
              <%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning btn-xs active", style: "width: 60px" %><br/>
              <%= link_to 'Destroy', product, class: "btn btn-danger btn-xs active", style: "width: 60px", method: :delete, data: { confirm: 'Are you sure?' } %>
          </td> 
      </tr> 
  <% end %> 
  </tbody>
</table>

<br />

  
<%= link_to 'Back to store catalog', store_path, class: "btn btn-primary btn-sm active" %> 
<%= link_to 'Add new product', new_product_path, class: "btn btn-success btn-sm active" %>
 