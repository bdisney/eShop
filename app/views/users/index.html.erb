<h2>Listing Users</h2>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>created at</th>
      <th>Updated at</th>
      <th >Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="<%= cycle('success', 'info', 'active') %>">
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.created_at.strftime("%F %H:%M") %></td>
        <td><%= user.updated_at.strftime("%F %H:%M") %></td>
        <td class="list_actions">
          <%= link_to 'Show', user, class: "btn btn-info btn-xs active", style: "width: 60px" %><br />
          <%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning btn-xs active", style: "width: 60px" %><br />
          <%= link_to 'Destroy', user, class: "btn btn-danger btn-xs active", style: "width: 60px", method: :delete, data: { confirm: 'Are you sure?' } %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to store catalog', store_path, class: "btn btn-primary btn-sm active" %> 
<%= link_to 'Add new user', new_user_path, class: "btn btn-success btn-sm active" %>
