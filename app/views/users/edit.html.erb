<%= form_for(@current_user) do |f| %>

<section class="section">

    <!--Section heading-->
    <h1 class="section-heading">Edit your details</h1>
    <!--Section sescription-->
    <p class="section-description mb-5">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fugit, error amet numquam iure provident voluptate esse quasi, veritatis totam voluptas nostrum quisquam eum porro a pariatur accusamus veniam. Quia, minima?</p>

    <div class="row">
        <!--First column-->
        <div class="col-md-8">
            <form>
                <!--First row-->
                <div class="row">
                    <!--First column-->
                    <div class="col-md-6">
                        <div class="md-form">
                            <div class="md-form">
                                <%= f.text_field :first_name,  class: "form-control"%>
                                <label for="form41" class="">First name</label>
                            </div>
                        </div>
                    </div>

                    <!--Second column-->
                    <div class="col-md-6">
                        <div class="md-form">
                            <div class="md-form">
                                 <%= f.text_field :second_name,  class: "form-control"%>
                                <label for="form52" class="">Second name</label>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/.First row-->

                <!--Second row-->
                <div class="row">
                    <!--First column-->
                    <div class="col-md-6">
                        <div class="md-form">
                            <div class="md-form">
                                <%= f.text_field :username,  class: "form-control"%>
                                <label for="form41" class="">Username</label>
                            </div>
                        </div>
                    </div>

                    <!--Second column-->
                    <div class="col-md-6">
                        <div class="md-form">
                            <div class="md-form">
                                <%= f.email_field :email,  class: "form-control"%>
                                <label for="form52" class="">Email</label>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/Second row-->

                <!--Third row-->
                  <div class="row">
                      <!--First column-->
                      <div class="col-md-6">
                          <div class="md-form">
                              <div class="md-form">
                                  <%= f.password_field :password,  class: "form-control"%>
                                  <label for="form41" class="">Password</label>
                              </div>
                          </div>
                      </div>

                      <!--Second column-->
                      <div class="col-md-6">
                          <div class="md-form">
                              <div class="md-form">
                                   <%= f.password_field :password_confirmation,  class: "form-control"%>
                                  <label for="form52" class="">Password confirmation</label>
                              </div>
                          </div>
                      </div>
                  </div>
                <!--/.Third row-->
            </form>

            <div class="center-on-small-only">
                <div class="row">
                    <%= f.submit 'UPDATE', class: "btn btn-outline-primary btn-rounded waves-effect" %>
                    <p><%= button_to "Cancel my account",  user_registration_path, class: "btn btn-outline-danger btn-rounded waves-effect", data: { confirm: "Are you sure?" }, method: :delete %></p>
                </div>
            </div>
        </div> 
    </div>   
    <br />

  <% end %>
</section>
