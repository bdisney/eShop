<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div class="alert alert-danger" role="alert">
    
      <h4><%= pluralize(@contact.errors.count, "error") %> prohibited this message from being saved:</h4>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<form>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email,  class: "form-control", placeholder: "example@example.com",  style: "width: 400px", autofocus: "" %>
  </div>
  <div class="form-group">
    <%= f.label :message %><br>
    <%= f.text_area :message, class: "form-control", style: "width: 400px", rows: "3", placeholder: "Input your message here" %>
  </div>
 
  <div class="actions">
    <%= f.submit 'Send Message', class: "btn btn-success" %>
  </div>
 
    
<% end %>

<%= link_to 'Back to store catalog', store_url, class: "btn btn-primary btn-xs active" %>


