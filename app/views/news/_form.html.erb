      <h2><%= pluralize(@news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% @news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_area :title,  class: "form-control", placeholder: "title",  style: "width: 400px", autofocus: "" %>
  </div>
  <div class="form-group">
    <%= f.label :sub_title %><br />
    <%= f.text_area :sub_title,  class: "form-control", placeholder: "title",  style: "width: 400px", autofocus: "" %>
  </div>
  <div class="form-group">
    <%= f.label :image_url %><br />
    <%= f.text_field :image_url,  class: "form-control", placeholder: "jpg, gif, png",  style: "width: 400px", autofocus: "" %>
  </div>
  <div class="form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, class: "form-control", style: "width: 400px", rows: "3", placeholder: "Input News text heer" %>
  </div>
 
  <div class="actions">
