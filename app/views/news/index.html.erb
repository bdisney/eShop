<!-- START THE FEATURETTES -->
  <% @news.each_with_index do |article, index| %>
    <% if index.odd?  %> 

      <hr class="featurette-divider">
      <div class="row featurette">
        <div class="col-md-7">
          <h2 class="featurette-heading"><%= article.title %><span class="text-muted"> <%= article.sub_title %></span></h2>
          <p class="lead"><%= article.body %></p>
          <br />
          <div class="list_actions">
            <%= link_to 'Edit', edit_news_path(article), class: "btn btn-warning" %>
            <%= link_to 'View details >>', article, class: "btn btn-default" %>
            <%= link_to 'Destroy', article, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
        <div class="col-md-3">
          <%= image_tag(article.image_url, class: 'featurette-image img-responsive') %>
        
        </div>
      </div>

    <% else %>

      <hr class="featurette-divider">
      <div class="row featurette">
        <div class="col-md-3">
          <%= image_tag(article.image_url, class: 'featurette-image img-responsive') %> 
        </div>
        <div class="col-md-7">
          <h2 class="featurette-heading"><%= article.title %><span class="text-muted"> <%= article.sub_title %></span></h2>
          <p class="lead"><%= article.body %></p>
          <br />
          <div class="list_actions">
            <%= link_to 'Edit', edit_news_path(article), class: "btn btn-warning" %>
            <%= link_to 'View details >>', article, class: "btn btn-default" %>
            <%= link_to 'Destroy', article, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
      