<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags always come first -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>JUSTWatches</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">

    <!-- Material Design Bootstrap -->
    <%= stylesheet_link_tag 'mdb.min.css' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag 'style.css' %>
    <%= csrf_meta_tags %>
    
    <style>
    
        /* Carousel and pictures */
        .view:not(.hm-zoom) {
            overflow:visible;
        }
    
    </style>

</head>

<body class="fixed-sn mdb-skin">
<div id="wrapper">
   
    <!--Double navigation-->
    <header>
        <!-- Sidebar navigation -->
        <ul id="slide-out" class="side-nav fixed sn-bg-1 custom-scrollbar">
            <!-- Logo -->
            <li>
                <div class="logo-wrapper waves-light">
                    <a href="#"><img src="" class="img-fluid flex-center"></a>
                </div>
            </li>
            <!--/. Logo -->
            <!--Social-->
            <li>
                <ul class="social">
                    <li><a class="icons-sm fb-ic"><i class="fa fa-facebook"> </i></a></li>
                    <li><a class="icons-sm pin-ic"><i class="fa fa-pinterest"> </i></a></li>
                    <li><a class="icons-sm gplus-ic"><i class="fa fa-google-plus"> </i></a></li>
                    <li><a class="icons-sm tw-ic"><i class="fa fa-twitter"> </i></a></li>
                </ul>
            </li>
            <!--/Social-->
         
            <!-- Side navigation links -->

            <li>
                <ul class="collapsible collapsible-accordion">
                    <li><a class="collapsible-header waves-effect arrow-r"><i class="fa fa-heart"></i> Catalogue<i class="fa fa-angle-down rotate-icon"></i></a>
                    <% Category.all.find_each do |category| %>
                        <div class="collapsible-body">
                            <ul>
                                <li><%= link_to category.name, products_path(category: category.id), class: "waves-effect" %></li>
                            </ul>
                        </div>
                        <% end %>
                    </li>
              
                    <li><a class="collapsible-header waves-effect arrow-r" href="<%= about_path %>"><i class="fa  fa-book"></i> About JW</a>
                    </li>
                    <li><a class="collapsible-header waves-effect arrow-r" href="<%= news_index_path %>"><i class="fa fa-globe"></i> News</a>
                    </li>
                    <li>
                        <div id="side">
                          
                        </div>
                    </li>
                    <li><a class="collapsible-header waves-effect arrow-r" href="<%= faq_path %>"><i class="fa  fa-book"></i> Questions?</a>
                    </li>
                </ul>

            </li>
            <!--/. Side navigation links -->
            <div class="sidenav-bg mask-strong"></div>
        </ul>
        <!--/. Sidebar navigation -->

        <!--Navbar-->
        <nav class="navbar fixed-top navbar-toggleable-md navbar-dark scrolling-navbar double-nav">

            <!-- SideNav slide-out button -->
            <div class="float-left">
                <a href="#" data-activates="slide-out" class="button-collapse"><i class="fa fa-bars"></i></a>
            </div>

            <!-- Breadcrumb-->
            <div class="breadcrumb-dn mr-auto">
                <a href="<%= store_url %>"><p>JUSTWatches</p></a>
            </div>

            <ul class="nav navbar-nav nav-flex-icons ml-auto">
            <% if current_or_guest_user %>    
                <li class="nav-item">
                    <a class="nav-link" href="<%= edit_cart_path(@cart) %>"> <span class="badge red z-depth-1" id="badge"><%= render 'carts/badge' %> 
                   
                    </span> <i class="fa fa-shopping-cart"></i> <span class="hidden-sm-down">Cart</span></a>

                </li>
               <%end %>
                <li class="nav-item">
                    <a class="nav-link" href="<%= new_contact_path %>"><i class="fa fa-envelope"></i> <span class="hidden-sm-down">Contact</span></a>
                </li>
                <% if can? :manage, User %>
                    <li class="nav-item">
                        <a class="nav-link" href="<%= rails_admin_path %>"><i class="fa fa-dashboard"></i> <span class="hidden-sm-down">Dashboard</span></a>
                    </li>
                <% end %>
                
                <% if user_signed_in? %>
                    <li class="nav-item">
                        <a class="nav-link" href="<%= edit_user_path(current_user) %>"><i class="fa fa-user"></i> <span class="hidden-sm-down">Profile</span></a>
                    </li>
                    <li class="nav-item">
                        
                        <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "nav-link" %>
                    </li>
                
                <% else %>
                    <li class="nav-item">
                        <a class="nav-link" href="<%= new_user_session_path %>"><i class="fa fa-sign-in"></i> <span class="hidden-sm-down"> Log in</span></a>
                    </li>
                <% end %>
                </li>
            </ul> 
        </nav>
        <!--/.Navbar-->
    </header>
    <!--/Double navigation-->

    <!--Main layout-->
    <main id="top-section">
        <div id="main">
            <% unless flash.empty? %>
                <script type="text/javascript">
                    <% flash.each do |f| %>
                        <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
                        toastr['<%= type %>']('<%= f[1] %>');
                    <% end %>
                </script>
            <% end %>
          

            <%= yield %>
            <!--Back to the top-->
            <div class="fixed-action-btn smooth-scroll" style="bottom: 45px; right: 24px;">
                <a href="#top-section" class="btn-floating btn-large">
                    <i class="fa fa-arrow-up"></i>
                </a>
            </div>
            <!--/Back to the top-->
      
        </div>
        
    </main>
    <!--/Main layout-->
    </div>


    <!--Footer-->
    <footer class="page-footer center-on-small-only">

        <!--Footer Links-->
        <div class="container-fluid">
            <div class="row wow fadeIn" data-wow-delay="0.3s">

                <!--First column-->
