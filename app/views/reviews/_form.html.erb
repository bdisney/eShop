 <div id="flash">
 <% if notice.present? %>
    <%= render partial: "shared/notice_banner" %>
  <% end %>
</div>



<%= form_for([@product, @review], remote: true) do |f| %>
  <div class="form-group row">
    <i class="fa fa-star fa-4x" aria-hidden="true"></i>
    <div class="range-field" id='star-rating'>
      <%= f.number_field :rating %>
    </div>
  </div>

  <div class="md-form">
    <i class="fa fa-pencil prefix"></i>
    <%= f.text_area :comment, class: 'md-textarea' %>
    <label for="form8">Review</label>
  </div>
 
  <br/>
  <div class="form-group row">
    <div class="col-sm-12">
      <a class="btn btn-outline-default btn-rounded waves-effect" href="<%= product_path(@product) %>">BACK</a>
      <button type="submit" class="btn btn-outline-primary btn-rounded waves-effect" rel="nofollow">SUBMIT</button>
    </div>
  </div>
<% end %>

<script>
    $(document).on('turbolinks:load', function() {
 
      $('#star-rating').raty({
          path: '/assets',
          scoreName: 'review[rating]'
      });
    });  


</script>